generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Product {
    id          String   @id @default(uuid())
    description String?
    image       String?
    name        String
    price       Float
    stock       Int      @default(0)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}
